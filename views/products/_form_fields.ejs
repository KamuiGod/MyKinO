<div>
    <label>Nom</label>
    <input type="text" name="name" placeholder="Ajouter nom" value="<%= product.name %>">
</div>
<div>
    <label>Référence</label>
    <input type="text" name="referenceID" placeholder="Ajouter référence" value="<%= product.referenceID %>">
</div>
<div>
    <label>Prix</label>
    <input type="text" name="price" placeholder="Ajouter prix" value="<%= product.price %>">
</div>
